# Используем официальный образ Node.js
FROM node:16-alpine
# Создаем и устанавливаем рабочую директорию
WORKDIR /usr/src/app

# Копируем зависимости и файлы
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем весь проект
COPY . .

# Публикуем порт для приложения
EXPOSE 8888

# Запуск приложения
CMD ["npm", "start"]